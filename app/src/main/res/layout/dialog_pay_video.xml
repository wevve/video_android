<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="298dp"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_card"
              android:minHeight="243dp"
              android:orientation="vertical">


    <TextView android:layout_width="298dp"
            android:gravity="center"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="20dp"
              android:includeFontPadding="false"
              android:text="请选择支付方式" android:textColor="#ff333333" android:textSize="13dp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="40dp"
                  android:layout_marginBottom="11dp">

        <LinearLayout
                android:id="@+id/ly_jb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="54dp"
                    android:layout_height="46dp">

                <ImageView
                        android:id="@+id/img_jb"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/jinbi_disable" />

                <ImageView
                        android:id="@+id/img_sel_jb"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="right|bottom"
                        android:src="@mipmap/type_sel"
                        android:visibility="gone" />
            </FrameLayout>

            <TextView
                    android:id="@+id/tv_jb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:maxWidth="72dp"
                    android:text="0金币"
                    android:textColor="#ff333333"
                    android:textSize="14dp" />

        </LinearLayout>


        <LinearLayout
                android:id="@+id/ly_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="54dp"
                    android:layout_height="46dp">

                <ImageView
                        android:id="@+id/img_wx"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/circle_wechat" />

                <ImageView
                        android:id="@+id/img_sel_wx"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="right|bottom"
                        android:src="@mipmap/type_sel"
                        android:visibility="gone" />
            </FrameLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:maxWidth="72dp"
                    android:text="微信支付"
                    android:textColor="#ff333333"
                    android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ly_ali"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="54dp"
                    android:layout_height="46dp">

                <ImageView
                        android:id="@+id/img_ali"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/circle_alipay" />

                <ImageView
                        android:id="@+id/img_sel_ali"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="right|bottom"
                        android:src="@mipmap/type_sel"
                        android:visibility="gone" />
            </FrameLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:maxWidth="72dp"
                    android:text="支付宝支付"
                    android:textColor="#ff333333"
                    android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
            android:layout_weight="1"
            android:singleLine="true"
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:text="剩余999金币，金币不足
请使用其他方式购买"
            android:textColor="#ffff3d3d"
            android:textSize="12dp" />

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="46dp">

        <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#ff333333"
                android:textSize="13dp" />
        <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#F0F0F0"/>

        <TextView
                android:id="@+id/tv_done"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认购买"
                android:textColor="#8B55F6"
                android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>
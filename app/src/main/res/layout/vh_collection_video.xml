<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBox
            android:background="@drawable/selector_check_box"
            android:button="@null"
            android:id="@+id/cb_sel"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="16dp" android:layout_height="16dp"/>

    <ImageView
            android:src="@mipmap/video_holder"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="35dp"
            android:id="@+id/img_cover"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cb_sel"
            android:layout_width="90dp" android:layout_height="54dp"/>

    <TextView
            app:layout_constraintVertical_bias="0"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@id/tv_date"
            android:ellipsize="end"
            android:lines="2"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="7dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/img_cover"
            app:layout_constraintLeft_toRightOf="@id/img_cover"
            android:text="【中韩字幕】"
            android:textColor="#ff000000"
            android:textSize="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_name"
            app:layout_constraintRight_toLeftOf="@+id/tv_type" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toRightOf="@id/img_cover"
            app:layout_constraintBottom_toBottomOf="@id/img_cover"
            android:text="2019-03-30"
            android:textColor="#ff000000"
            android:textSize="10dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_date"/>
    <TextView
            android:layout_marginRight="27dp"
            android:layout_marginTop="34dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="喜剧"
            android:textColor="#ff000000"
            android:textSize="12dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_type"/>
    <ImageView
            android:layout_marginTop="60dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/next_gray"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/img_next"/>
</android.support.constraint.ConstraintLayout>
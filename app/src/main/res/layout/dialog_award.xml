<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@drawable/shape_award_bg"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
            app:layout_constrainedHeight="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="230dp" android:id="@+id/recycler_view">

    </android.support.v7.widget.RecyclerView>

    
    <Button
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="29dp"
            android:text="取消"
            android:textColor="#ffffc05e"
            android:textSize="14dp"
            android:id="@+id/btn_cancel"
            android:background="@drawable/shape_white_16r"
            android:layout_width="84dp" android:layout_height="32dp"/>

    <Button
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="29dp"
            android:text="确定"
            android:textColor="#ffffc05e"
            android:textSize="14dp"
            android:id="@+id/btn_done"
            android:background="@drawable/shape_white_16r"
            android:layout_width="84dp" android:layout_height="32dp"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                               android:layout_marginTop="22dp"
                               android:layout_marginLeft="30dp"
                               android:layout_marginRight="30dp"
                              app:cardCornerRadius="5dp"
                              app:cardBackgroundColor="#777"
                               xmlns:app="http://schemas.android.com/apk/res-auto"
                               android:background="@color/white"
                               android:layout_width="match_parent"
                               android:layout_height="140dp">
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        
        <ImageView

                android:layout_marginLeft="17dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/img_back_icon"
                android:layout_width="21dp" android:layout_height="21dp"/>

        <TextView
                android:id="@+id/tv_bank_name"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="19dp"
                android:includeFontPadding="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="中国建设银行"
                android:textColor="#ffffffff"
                android:textSize="16dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_card_type"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="43dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="储蓄卡"
                android:textColor="#ffffffff"
                android:textSize="12dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:gravity="center"
                android:paddingLeft="10dp"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/shape_bank_card_del_btn"
                android:layout_width="60dp"
                android:layout_height="26dp"
                android:text="删除"
                android:textColor="#ffffffff"
                android:textSize="12dp"
                android:id="@+id/tv_del" android:visibility="gone">

        </TextView>

        <TextView
                android:layout_marginLeft="51dp"
                android:layout_marginTop="84dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="****"
                android:textColor="#ffffffff"
                android:textSize="12dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginLeft="105dp"
                android:layout_marginTop="84dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="****"
                android:textColor="#ffffffff"
                android:textSize="12dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginLeft="159dp"
                android:layout_marginTop="84dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="****"
                android:textColor="#ffffffff"
                android:textSize="12dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginLeft="211dp"
                android:layout_marginTop="84dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="1234"
                android:textColor="#ffffffff"
                android:textSize="12dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_last_card_num"/>
    </android.support.constraint.ConstraintLayout>

</android.support.design.card.MaterialCardView>
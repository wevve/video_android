<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <View
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:layout_width="match_parent" android:layout_height="155dp"/>

    <View
            android:background="@color/white"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent" android:layout_height="match_parent"/>


    <TextView
            android:id="@+id/tv_balance_label"
            android:includeFontPadding="false"
            android:layout_marginTop="51dp"
            android:layout_marginLeft="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="钱包余额（元）"
            android:textColor="#ff000000"
            android:textSize="14dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_coin_label"
            android:includeFontPadding="false"
            android:layout_marginTop="51dp"
            android:layout_marginRight="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="金币余额"
            android:textColor="#ff000000"
            android:textSize="14dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
            android:includeFontPadding="false"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_balance_label"
            app:layout_constraintLeft_toLeftOf="@id/tv_balance_label"
            app:layout_constraintRight_toRightOf="@id/tv_balance_label"
            android:text="1314.0"
            android:textColor="#ff000000"
            android:textSize="35dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_balance"/>

    <TextView
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/tv_coin_label"
            app:layout_constraintLeft_toLeftOf="@id/tv_coin_label"
            app:layout_constraintRight_toRightOf="@id/tv_coin_label"
            android:text="1314"
            android:textColor="#ff000000"
            android:textSize="35dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_coin"/>
    
    <ImageView
            app:layout_constraintHorizontal_chainStyle="spread"
            android:id="@+id/img_width_draw"
            android:layout_marginTop="185dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/img_deal_record"
            android:src="@mipmap/widthdraw" android:layout_width="172dp" android:layout_height="116dp"/>
    <TextView
            android:layout_marginLeft="19dp"
            android:layout_marginTop="11dp"
            app:layout_constraintLeft_toLeftOf="@id/img_width_draw"
            app:layout_constraintTop_toTopOf="@id/img_width_draw"
            android:text="提现"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/img_deal_record"
            android:layout_marginTop="185dp"
            app:layout_constraintLeft_toRightOf="@id/img_width_draw"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/deal_record_bg" android:layout_width="172dp" android:layout_height="116dp"/>

    <TextView
            android:layout_marginLeft="19dp"
            android:layout_marginTop="11dp"
            app:layout_constraintLeft_toLeftOf="@id/img_deal_record"
            app:layout_constraintTop_toTopOf="@id/img_deal_record"
            android:text="交易记录"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:text="立即充值"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_primary_dark_btn"
            android:layout_width="match_parent" android:layout_height="39dp" android:id="@+id/btn_recharge"/>
</android.support.constraint.ConstraintLayout>
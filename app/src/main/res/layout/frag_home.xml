<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
<LinearLayout
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:fitsSystemWindows="true"
                android:background="@drawable/shape_toolbar"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.jyt.video.common.view.StatusBarHeightView android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"></com.jyt.video.common.view.StatusBarHeightView>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="44dp">
                <ImageView
                        android:layout_marginLeft="13dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/img_avatar"
                        android:layout_width="30dp" android:layout_height="30dp"/>

                <com.jyt.video.common.view.SearchView
                        app:canInput="false"
                        android:id="@+id/search_view"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="55dp"
                        android:layout_marginRight="48dp"
                        android:layout_width="match_parent" android:layout_height="30dp"/>

                <ImageView
                        android:id="@+id/img_download"
                        android:layout_marginRight="17dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/xiazai"
                        android:layout_width="20dp" android:layout_height="wrap_content" android:adjustViewBounds="true"/>
            </RelativeLayout>
        </LinearLayout>
    
    
        <android.support.v7.widget.RecyclerView
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="43dp">
        </android.support.v7.widget.RecyclerView>

        <FrameLayout
                android:id="@+id/fl_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </FrameLayout>
</LinearLayout>

    <FrameLayout
            android:id="@+id/child_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>
</FrameLayout>

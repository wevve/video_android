<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp">
    <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/tv_text"
            android:gravity="center"
            android:background="@drawable/shape_search_text_history"
            android:includeFontPadding="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <ImageView
            android:layout_marginTop="-6dp"
            android:layout_alignTop="@id/tv_text"
            android:layout_toRightOf="@id/tv_text"
            android:layout_marginLeft="-6dp"
            android:src="@mipmap/circle_close"
            android:layout_width="15dp" android:layout_height="15dp" android:id="@+id/img_del"/>
</RelativeLayout>
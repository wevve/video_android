<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <FrameLayout
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        <ImageView
                android:src="@mipmap/logo"
                android:id="@+id/logo"
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="110dp"/>
    </FrameLayout>


    <View
            android:background="@color/zxing_status_text"
            android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    
    <ImageView
            android:src="@mipmap/yonghuzhuzhanghaoguanli"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="220dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="21dp"
            android:layout_width="16dp" android:layout_height="16dp"/>


    <ImageView
            android:src="@mipmap/mima"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="280dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="21dp"
            android:layout_width="16dp" android:layout_height="16dp"/>
    
    <View
            android:layout_marginTop="250dp"
            android:layout_marginLeft="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#e2e2e2"
            android:layout_width="290dp" android:layout_height="1dp"/>
    <View
            android:layout_marginTop="305dp"
            android:layout_marginLeft="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#e2e2e2"
            android:layout_width="290dp" android:layout_height="1dp"/>

    <EditText

            android:includeFontPadding="false"
            android:background="@null"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:hint="请输入帐号"
            android:layout_marginTop="223dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorHint="#7F000000"
            android:textSize="14dp"
            android:layout_width="290dp" android:layout_height="wrap_content" android:id="@+id/input_account"/>

    <EditText
            android:inputType="textPassword"
            android:includeFontPadding="false"
            android:background="@null"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:hint="请输入密码"
            android:layout_marginTop="281dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorHint="#7F000000"
            android:textSize="14dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:id="@+id/input_psd"/>

    <TextView
            android:layout_marginTop="390dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="还没有帐号？点击注册"
            android:textColor="#000"
            android:textSize="12dp"
            android:layout_width="125dp"
            android:layout_height="16dp"
            android:id="@+id/btn_to_register"
            android:layout_marginLeft="218dp"
            android:background="@color/zhihu_bottom_toolbar_bg"
    />

    <Button
            android:layout_marginTop="335dp"
            android:layout_marginRight="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_primary_style_btn"
            android:textColor="#ffffffff"
            android:textSize="12dp"
            android:text="登 录"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:id="@+id/btn_login"
    />


    <TextView
            android:visibility="gone"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:id="@+id/tv_protocol_label"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_to_protocol"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="登录即同意"
            android:textColor="#ff000000"
            android:textSize="14sp"
    />
    <TextView
            android:visibility="gone"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_protocol_label"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="《用户使用协议》"
            android:textColor="#ff9c28b1"
            android:textSize="14sp"
            android:id="@+id/tv_to_protocol"/>
</android.support.constraint.ConstraintLayout>
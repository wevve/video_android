<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
                                             android:layout_height="match_parent">
        <com.ogaclejapan.smarttablayout.SmartTabLayout android:layout_width="match_parent"
                                                       android:background="@color/white"
                                                       android:id="@+id/tab_layout"
                                                       app:stl_clickable="true"
                                                       app:stl_dividerThickness="0dp"
                                                       app:stl_indicatorColor="#9C28B1"
                                                       app:stl_indicatorThickness="2dp"
                                                       app:stl_defaultTabTextColor="@drawable/selector_tab_color"
                                                       app:stl_distributeEvenly="true"
                                                       app:stl_indicatorWidth="100dp"
                                                       android:layout_height="43dp">

        </com.ogaclejapan.smarttablayout.SmartTabLayout>
    <com.jyt.video.common.view.NoScrollViewPager
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
                                                 android:layout_height="match_parent"></com.jyt.video.common.view.NoScrollViewPager>
</LinearLayout> 
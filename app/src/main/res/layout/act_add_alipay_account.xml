<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="38dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="支付宝账号"
            android:textColor="#ff000000"
            android:textSize="14dp" android:id="@+id/textView"/>

    <EditText
            android:textColor="#000"
            android:hint="请输入支付宝"
            android:textColorHint="#727272"
            android:textSize="14dp"
            android:layout_marginLeft="108dp"
            app:layout_constraintBottom_toBottomOf="@id/textView"
            app:layout_constraintRight_toLeftOf="@id/img_clear"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@null"
            android:layout_width="0dp" android:layout_height="wrap_content"
             app:layout_constraintTop_toTopOf="@+id/textView"/>

    <ImageView
            app:layout_constraintTop_toTopOf="@id/textView"
            app:layout_constraintBottom_toBottomOf="@id/textView"
            app:layout_constraintRight_toRightOf="@id/line"
            android:src="@mipmap/close"
            android:layout_width="24dp" android:layout_height="24dp" android:cropToPadding="true"
            android:padding="5dp" android:adjustViewBounds="false" android:id="@+id/img_clear"/>
    
    <View
            android:id="@+id/line"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="35dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#EEEEEE"
            android:layout_width="245dp" android:layout_height="1dp"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:layout_width="match_parent" android:layout_height="184dp"/>


    <ImageView
            android:src="@mipmap/yonghuzhuzhanghaoguanli"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="21dp"
            android:layout_width="16dp" android:layout_height="16dp"/>


    <ImageView
            android:src="@mipmap/mima"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="21dp"
            android:layout_width="16dp" android:layout_height="16dp"/>
    <ImageView
            android:src="@mipmap/mima"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="129dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="21dp"
            android:layout_width="16dp" android:layout_height="16dp"/>

    <View
            android:layout_marginTop="45dp"
            android:layout_marginLeft="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#7F000000"
            android:layout_width="290dp" android:layout_height="1dp"/>
    <View
            android:layout_marginTop="99dp"
            android:layout_marginLeft="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#7F000000"
            android:layout_width="290dp" android:layout_height="1dp"/>
    <View
            android:layout_marginTop="153dp"
            android:layout_marginLeft="53dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#7F000000"
            android:layout_width="290dp" android:layout_height="1dp"/>

    <EditText

            android:includeFontPadding="false"
            android:background="@null"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:hint="请输入账号"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorHint="#7F000000"
            android:textSize="14dp"
            android:layout_width="290dp" android:layout_height="wrap_content" android:id="@+id/input_account"/>

    <EditText
            android:inputType="textPassword"
            android:includeFontPadding="false"
            android:background="@null"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:hint="请输入密码"
            android:layout_marginTop="72dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorHint="#7F000000"
            android:textSize="14dp"
            android:layout_width="290dp" android:layout_height="wrap_content" android:id="@+id/input_psd1"/>

    <EditText
            android:id="@+id/input_psd2"
            android:inputType="textPassword"
            android:includeFontPadding="false"
            android:background="@null"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:hint="请再次输入密码"
            android:layout_marginTop="126dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorHint="#7F000000"
            android:textSize="14dp"
            android:layout_width="290dp" android:layout_height="wrap_content"/>


    <Button
            android:background="@drawable/shape_primary_dark_btn"
            android:gravity="center"
            android:text="完成注册并登录"
            android:textColor="#ffffffff"
            android:textSize="12dp"
            android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="158dp" android:layout_height="33dp" android:id="@+id/btn_register"/>


    <TextView
            app:layout_constraintHorizontal_chainStyle="packed"
            android:id="@+id/tv_hint"
            android:layout_marginBottom="48dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_to_protocol"
            android:text="点击“完成注册并登录” 即同意"
            android:textColor="#ff000000"
            android:textSize="14dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_to_protocol"
            android:layout_marginBottom="48dp"
            app:layout_constraintLeft_toRightOf="@id/tv_hint"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="《用户使用协议》"
            android:textColor="#ff8b55f6"
            android:textSize="14sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="46dp">
            <TextView
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="旧密码"
                    android:textColor="#ff000000"
                    android:textSize="16dp"
                    android:layout_width="wrap_content" android:layout_height="match_parent"/>

            <EditText
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_marginLeft="25dp"
                    android:hint="请填写旧密码"
                    android:textColorHint="#ff000000"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/input_old_psd"/>

        </LinearLayout>
        <View
                android:background="#707070"
                android:alpha="0.1" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="46dp">
            <TextView
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="新密码"
                    android:textColor="#ff000000"
                    android:textSize="16dp"
                    android:layout_width="wrap_content" android:layout_height="match_parent"/>

            <EditText
                    android:singleLine="true"
                    android:background="@null"
                    android:layout_marginLeft="25dp"
                    android:hint="请填写新密码"
                    android:textColorHint="#ff000000"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/input_new_psd1"/>

        </LinearLayout>
        <View
                android:background="#707070"
                android:alpha="0.1" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="46dp">
            <TextView
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="确认新密码"
                    android:textColor="#ff000000"
                    android:textSize="16dp"
                    android:layout_width="wrap_content" android:layout_height="match_parent"/>

            <EditText
                    android:singleLine="true"
                    android:inputType="text"
                    android:background="@null"
                    android:layout_marginLeft="25dp"
                    android:hint="请再次填写新密码"
                    android:textColorHint="#ff000000"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/input_new_psd2"/>

        </LinearLayout>
        <View
                android:background="#707070"
                android:alpha="0.1" android:layout_width="match_parent" android:layout_height="1dp"/>
    </LinearLayout>


    <Button
            android:layout_marginTop="97dp"
            android:background="@drawable/shape_primary_dark_btn"
            android:layout_gravity="center"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="17dp"
            android:layout_width="235dp" android:layout_height="42dp" android:id="@+id/btn_done"/>

</LinearLayout>
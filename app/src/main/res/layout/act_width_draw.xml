<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
            android:layout_marginTop="17dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent" android:layout_height="228dp">
        <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </android.support.v7.widget.CardView>

    </FrameLayout>


    <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_to_bank_card_label"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="47dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="选择到账账户"
            android:textColor="#ff333333"
            android:textSize="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
            android:includeFontPadding="false"
            android:text=""
            android:textColor="#ff535353"
            android:textSize="16dp"
            android:id="@+id/tv_bank_card"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_to_bank_card_label"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="@+id/tv_to_bank_card_label"
            app:layout_constraintTop_toTopOf="@+id/tv_to_bank_card_label" android:layout_marginLeft="20dp"/>

    <View
            android:layout_marginTop="79dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tv_to_bank_card_label"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="31dp"
            android:background="#EEEEEE"
            android:layout_width="match_parent" android:layout_height="1dp" android:id="@+id/view"/>

    <TextView
            android:includeFontPadding="false"
            android:layout_marginTop="97dp"
            android:layout_marginLeft="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="提现金额"
            android:textColor="#ff333333"
            android:textSize="16dp"
            android:id="@+id/tv_width_draw_money_label"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView
            android:includeFontPadding="false"
            android:layout_marginTop="126dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="55dp"
            android:id="@+id/tv_label_sign"
            android:textColor="#ff333333"
            android:textSize="20dp"
            android:text="￥"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
            android:background="@null"
            android:layout_marginRight="55dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_label_sign"
            app:layout_constraintBottom_toBottomOf="@id/tv_label_sign"

            android:singleLine="true"
            android:inputType="number"
            android:includeFontPadding="false"

            android:text="0"

            android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/input_money"/>

    <View
            android:layout_marginTop="163dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tv_to_bank_card_label"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="31dp"
            android:background="#EEEEEE"
            android:layout_width="match_parent" android:layout_height="1dp" android:id="@+id/view2"/>

    <TextView
            android:includeFontPadding="false"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="58dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="零钱余额0"
            android:textColor="#ff333333"
            android:textSize="14dp"
            android:id="@+id/tv_total_balance"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
            android:includeFontPadding="false"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_total_balance"
            android:id="@+id/tv_all_width_draw"
            android:text="全部提现"
            android:textColor="#ff535353"
            android:textSize="16sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button
            android:text="新增提现账号"
            android:textColor="#ff8b55f6"
            android:textSize="13dp"
            android:layout_marginTop="263dp"
            android:layout_marginRight="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_primary_stroke_19r"
            android:layout_width="118dp" android:layout_height="29dp" android:id="@+id/btn_new_account"/>

    <Button
            android:text="提现"
            android:textColor="#ffffffff"
            android:textSize="17dp"
            android:background="@drawable/shape_primary_dark_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="323dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="235dp" android:layout_height="42dp" android:id="@+id/btn_width_draw"/>
</android.support.constraint.ConstraintLayout>
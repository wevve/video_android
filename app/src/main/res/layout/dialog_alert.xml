<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:background="@drawable/shape_dialog_bg"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
    <View android:layout_width="239dp" android:layout_height="120dp"/>

    <TextView
            android:textColor="#ff333333"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/line_hor"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_message"/>


    <View
            android:id="@+id/line_hor"
            android:layout_marginBottom="47dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#EEEEEE"
            android:layout_width="match_parent" android:layout_height="1dp"/>

    <TextView
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="确定"
            android:textColor="#ff333333"
            android:textSize="14dp"
            android:id="@+id/tv_confirm"
            android:layout_width="0dp" android:layout_height="47dp"/>
    <View
            android:background="#EEEEEE"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="1dp" android:layout_height="47dp" android:id="@+id/line_ver"/>
    <TextView
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_confirm"
            app:layout_constraintRight_toRightOf="parent"
            android:text="取消"
            android:textColor="#ff333333"
            android:textSize="14dp"
            android:id="@+id/tv_cancel"
            android:layout_width="0dp" android:layout_height="47dp" android:visibility="gone"/>
</android.support.constraint.ConstraintLayout>
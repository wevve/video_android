<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fl_end_free"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    <ImageView
            android:id="@+id/blurImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"></ImageView>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000" />

    <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_free_play_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="144dp"
            android:text="试看结束，观看完整版请开通vip"
            android:textColor="#ffffffff"
            android:textSize="16dp" />

    <TextView
            android:includeFontPadding="false"
            android:id="@+id/btn_buy_mumber"
            android:layout_width="120dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="49dp"
            android:layout_marginBottom="78dp"
            android:background="@drawable/shape_15r_gold_solid"
            android:gravity="center"
            android:text="开通vip免费看"
            android:textColor="@color/black"
            android:textSize="12dp" />

    <TextView
            android:includeFontPadding="false"
            android:id="@+id/btn_buy_video"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="49dp"
            android:layout_marginBottom="78dp"
            android:background="@drawable/shape_15r_gold_storke"
            android:gravity="center"
            android:minWidth="120dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="5.0元原价购买单片"
            android:textColor="#D5B37B"
            android:textSize="12dp" />

    <FrameLayout
            android:layout_above="@id/btn_buy_video"
            android:layout_alignLeft="@id/btn_buy_video"
            android:layout_alignRight="@id/btn_buy_video"
            android:layout_marginBottom="-4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:id="@+id/tv_validity"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:background="@drawable/shape_gold_gradient"
                android:text="单点付费48小时内有效"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="8dp" />

    </FrameLayout>


    <LinearLayout
            android:paddingBottom="14dp"
            android:id="@+id/replay_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:paddingLeft="14dp">

        <ImageView
                android:id="@+id/img_end_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@mipmap/video_replay" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新试看"
                android:textColor="@color/white"
                android:textSize="12dp" />
    </LinearLayout>

</RelativeLayout>
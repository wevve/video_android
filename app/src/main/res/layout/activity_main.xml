<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

    <com.jyt.video.common.view.NoScrollViewPager
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view_pager"></com.jyt.video.common.view.NoScrollViewPager>



       <LinearLayout

               android:background="#FFFFFF"
               android:orientation="horizontal"
               android:id="@+id/ll_bottom"
               android:layout_width="match_parent" android:layout_height="49dp">


           <LinearLayout
                   android:id="@+id/ll_tab_home"
                   android:gravity="center_horizontal"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="0dp" android:layout_height="match_parent">
                    <ImageView
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/home_sel"
                            android:layout_width="22dp" android:layout_height="19dp"/>
                    <TextView
                            android:includeFontPadding="false"
                            android:layout_marginTop="3dp"
                            android:text="首页"
                            android:textColor="#ff9c28b1"
                            android:textSize="10dp"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
                   android:id="@+id/ll_tab_proxy"
                   android:gravity="center_horizontal"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="0dp" android:layout_height="match_parent">
               <ImageView
                       android:layout_marginTop="6dp"
                       android:src="@mipmap/proxy_nor"
                       android:layout_width="22dp" android:layout_height="20dp"/>
               <TextView
                       android:includeFontPadding="false"
                       android:layout_marginTop="3dp"
                       android:text="代理"
                       android:textColor="#5D5D5D"
                       android:textSize="10dp"
                       android:layout_width="wrap_content" android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
                   android:id="@+id/ll_tab_publicity"
                   android:gravity="center_horizontal"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="0dp" android:layout_height="match_parent">
               <ImageView
                       android:layout_marginTop="4dp"
                       android:src="@mipmap/publicity_nor"
                       android:layout_width="22dp" android:layout_height="24dp"/>
               <TextView
                       android:includeFontPadding="false"
                       android:text="宣传"
                       android:textColor="#5D5D5D"
                       android:textSize="10dp"
                       android:layout_width="wrap_content" android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
                   android:gravity="center_horizontal"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="0dp" android:layout_height="match_parent" android:id="@+id/ll_tab_member">
               <ImageView
                       android:layout_marginTop="7dp"
                       android:src="@mipmap/member_nor"
                       android:layout_width="23dp" android:layout_height="19dp"/>
               <TextView
                       android:includeFontPadding="false"
                       android:layout_marginTop="2dp"
                       android:text="会员"
                       android:textColor="#5D5D5D"
                       android:textSize="10dp"
                       android:layout_width="wrap_content" android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
                   android:gravity="center_horizontal"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:layout_width="0dp" android:layout_height="match_parent" android:id="@+id/ll_tab_personal">
               <ImageView
                       android:layout_marginTop="6dp"
                       android:src="@mipmap/personal_nor"
                       android:layout_width="23dp" android:layout_height="21dp"/>
               <TextView
                       android:includeFontPadding="false"
                       android:layout_marginTop="1dp"
                       android:text="我的"
                       android:textColor="#5D5D5D"
                       android:textSize="10dp"
                       android:layout_width="wrap_content" android:layout_height="wrap_content"/>
           </LinearLayout>


       </LinearLayout>
</LinearLayout>
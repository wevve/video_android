<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:layout_width="match_parent"
                                              android:minHeight="135dp"
                                              android:layout_height="wrap_content"
                                              android:layout_marginLeft="8dp"
                                              android:layout_marginRight="8dp"
                                              android:layout_marginBottom="14dp"
                                              app:cardCornerRadius="5dp"
                                              app:cardElevation="3dp"
                                              xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_type"
                android:text="视频购买"
                android:textColor="#ff000000"
                android:textSize="14dp"
                android:includeFontPadding="false"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_date"
                android:includeFontPadding="false"
                android:layout_marginTop="14dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="2019-03-25"
                android:textColor="#ff000000"
                android:textSize="12dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <View
                android:id="@+id/line_hor"
                android:layout_marginTop="42dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#EEEEEE"
                android:layout_width="match_parent" android:layout_height="1dp"/>

        <TextView
                android:id="@+id/tv_order_no"
                android:includeFontPadding="false"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="59dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="订单号： 0190311123456789"
                android:textColor="#ff000000"
                android:textSize="14dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_mark"
                android:includeFontPadding="false"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="92dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="23dp"
                android:layout_marginRight="8dp"
                android:text="备注：会员充值-包月"
                android:textColor="#ff000000"
                android:textSize="14dp"
                android:layout_width="0dp" android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_content"
                android:text="-30元"
                android:textColor="#ffff0000"
                android:textSize="14dp"
                android:layout_marginRight="37dp"
                app:layout_constraintTop_toTopOf="@id/line_hor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView
                android:alpha="0.5"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="17dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="已打款"
                android:textColor="#ff000000"
                android:textSize="12dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tv_state"/>
    </android.support.constraint.ConstraintLayout>
</android.support.design.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <View
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/space_end"
            android:id="@+id/background"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_card"
            android:layout_width="348dp" android:layout_height="0dp"/>


    <ImageView
            android:id="@+id/img_ding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/ding"
            android:layout_width="52dp" android:layout_height="52dp"/>

    <TextView
            android:includeFontPadding="false"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@id/img_ding"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_title"
            android:text="【VIP到期提醒】"
            android:textColor="#ff000000"
            android:textSize="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:id="@+id/tv_msg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="尊贵的VIP用户，您的ViP会员特权将于三天后 (2019-03-29)到期，至此到期后将无法体验会员特权服务，立即续费吧"
            android:textColor="#ff000000"
            android:textSize="14dp"
            android:layout_width="228dp" android:layout_height="wrap_content"/>
    
    <Button
            android:id="@+id/btn_ok"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_msg"
            android:layout_marginTop="27dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="我知道了"
            android:textColor="#ffffffff"
            android:textSize="14dp"
            android:background="@drawable/shape_primary_dark_btn"
            android:layout_width="235dp" android:layout_height="35dp"/>

    <Space
            android:layout_marginTop="31dp"
            android:id="@+id/space_end"
            app:layout_constraintTop_toBottomOf="@id/btn_ok"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>